{
    "compilerOptions": {
        "target": "ES2020",                                 
        "module": "CommonJS",                               
        "lib": ["ES2020"],                                  
        "allowJs": true,                                    
        "outDir": "./build",                                 
        "rootDir": "./src",                                 
        "strict": true,
        "moduleResolution": "node",                         
        "esModuleInterop": true,                            
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,                          
        "sourceMap": true,                                  
        "incremental": true,                                
        "noEmitOnError": true,                              
        "baseUrl": ".",
        "typeRoots": ["./types"],                                     
        "paths": {                                          
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/", "build/", "**/*.test.ts"]
}